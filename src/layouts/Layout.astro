---
import Header from "../components/Header";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icons/logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&family=Roboto&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header client:load />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #0f0f0f;
  }
  body {
    margin: 0;
    height: 100vh;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  header {
    display: flex;
    flex-direction: column;
  }
  .header-main {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid #313131;
  }
  .logo-anchor {
    text-decoration: inherit;
    color: #ffffff;
    height: 1rem;
  }

  .logo-anchor svg {
    height: 1rem;
    width: auto;
  }

  .logo-anchor:is(:hover, :focus-within) {
    color: #c6ae59;
  }

  .menu {
    border: none;
    padding: 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 2rem;
    height: 2rem;
    background: #1e1e1e;
    border-radius: 5px;
  }

  .menu svg {
    width: 1.5rem;
    height: 1.5rem;
    color: #d9d9d9;
  }

  .menu:is(:hover, :focus-within) {
    color: #313131;
  }
  .nav-container {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 3rem;
    padding: 0 1rem;
    background: #313131;
    margin: 0;
  }

  .nav-container li {
    font-family: "Oswald";
    font-style: normal;
    font-weight: 400;
    font-size: 1.5rem;
    line-height: 36px;
  }

  .nav-container li a {
    text-decoration: inherit;
    color: #ffffff;
  }

  .nav-container li a:is(:hover, :focus-within) {
    color: #c6ae59;
  }
  main {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0px 0.75rem 1rem;
  }
</style>

---
export interface Props {
  width?: string;
}

const { width } = Astro.props;
---

<div class="card" style={{ width: width }}>
  <slot />
</div>
<style>
  .card {
    background: #1e1e1e;
    font-family: "Arimo";
    font-style: normal;
    font-weight: 400;
    font-size: 1rem;
    color: #ffffff;
    padding: 2rem;
  }
</style>

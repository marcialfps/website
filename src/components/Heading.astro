---
export interface Props {
  title: string;
  level: 5 | 4 | 3 | 2 | 1;
}

const { title, level } = Astro.props;
---

{
  level === 5 ? (
    <h5>{title}</h5>
  ) : level === 4 ? (
    <h4>{title}</h4>
  ) : level === 3 ? (
    <h3>{title}</h3>
  ) : level === 2 ? (
    <h2>{title}</h2>
  ) : (
    <h1>{title}</h1>
  )
}
<style>
  * {
    font-family: "Aldrich";
    font-style: normal;
    font-weight: 400;
    color: #ffffff;
    margin: 0;
  }
  h4 {
    font-size: 1.5rem;
  }
  h3 {
    font-size: 2rem;
    color: #c6ae59;
  }
</style>

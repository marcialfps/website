import Presentation from "../components/Presentation.astro";

const socialMedia = [
  { text: "Linkedin", href: "https://www.linkedin.com/in/marcialfps/" },
  { text: "GitHub", href: "https://github.com/marcialfps" },
  { text: "E-mail", href: "mailto:marcialfco@live.com" },
];

const skills = [
  { icon: figma, text: "Figma" },
  { icon: javascript, text: "JavaScript" },
  { icon: typescript, text: "TypeScript" },
  { icon: html5, text: "HTML" },
  { icon: css3, text: "CSS" },
  { icon: react, text: "React" },
  { icon: nodejs, text: "NodeJS" },
  { icon: aws, text: "AWS" },
  { icon: astro, text: "AstroJS" },
  { icon: nextjs, text: "NextJS" },
  { icon: testinglibrary, text: "Testing Library" },
  { icon: jest, text: "Jest" },
  { icon: express, text: "ExpressJS" },
  { icon: tailwind, text: "TailwindCSS" },
];

const projects = [
  {
    image: mfpsDesign,
    imageAlt: "MFPS designs",
    title: "MFPS brand and website",
    description:
      "Personal brand and website used for professional purposes. It has been created entirely by me at Figma and used on this website. The website is implemented in AstroJS and TailwindCSS.",
    tags: ["Figma", "Astro", "TailwindCSS"],
    link: "https://www.figma.com/file/EwHQlcfgIMY83DHmWfNcm0/Portfolio-and-social-media-design?type=design&node-id=0%3A1&mode=design&t=lcfnIEKhboosV7XS-1",
    linkText: "See Figma design",
  },
  {
    image: letthebadguysrollImage,
    imageAlt: "Let the bad guys roll icon",
    title: "Let the Bad Guys Roll",
    description:
      "Demo game developed for the GMTK 2022 Game Jam. The planet is under the attack of the diciest army in town and it is up to you to protect it.",
    tags: ["Game Jam", "Unity"],
    link: "https://ulitol97.itch.io/let-the-bad-guys-roll",
    linkText: "Play game",
  },
  {
    image: endOfDegreeImage,
    imageAlt: "Capture of the Augmented Reality app",
    title:
      "Assessment of preclinical learning using virtual reality based education for nursing students",
    description:
      "In this research, a case study is presented to analyze the use of VR technologies to learn healthcare techniques in the first year of nursing school.",
    tags: ["Research paper", "Virtual Reality", "Unity"],
    link: "https://www.tandfonline.com/doi/full/10.1080/09523987.2023.2324597",
    linkText: "Read article",
  },
  {
    image: lanzarImage,
    imageAlt: "Preview of LanzAR project",
    title: "LanzAR (Lanzarote in Augmented Reality)",
    description:
      "LanzAR provides a location-based experience where the user can see historical performances in augmented reality. Students participated in the recording of the historical representations.",

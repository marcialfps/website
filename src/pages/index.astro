// Images
import mainPhoto from "../assets/mainPhoto.png";
import letthebadguysrollImage from "../assets/letthebadguys.png";
import lanzarImage from "../assets/lanzar.png";
import endOfDegreeImage from "../assets/endOfDegreeProject.png";
import mfpsDesign from "../assets/mfpsDesign.png";

// Icons
import JobIcon from "../components/icons/Job.astro";
import BookIcon from "../components/icons/Book.astro";
import ToolsIcon from "../components/icons/Tools.astro";
import CodeIcon from "../components/icons/Code.astro";

import figma from "../assets/figma.svg";

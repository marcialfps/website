---
import MainLayout from "../layouts/MainLayout.astro";
import Separator from "../components/Separator.astro";
import { Image } from "astro:assets";
import textSeparator from "../assets/textSeparator.svg";
import Heading from "../components/Heading.astro";
import Card from "../components/Card.astro";
import Timeline from "../components/Timeline.astro";
import Tag from "../components/Tag.astro";

// Images
import volunteerPhoto from "../assets/volunteerPhoto.png";
import volunteerPhoto2 from "../assets/volunteerPhoto2.jpg";
import tiaguaMadreTierra from "../assets/tiaguaMadreTierra.jpg";
import afterSchool from "../assets/afterSchool.jpg";
---

<MainLayout>
  <Separator />

  <section
    class="flex flex-col gap-2 lg:flex-row items-center lg:h-1/2 bg-gradient-to-t lg:bg-gradient-to-l from-yellow rounded-xl p-8 lg:p-12"
  >
    <div class="flex flex-col items-center gap-6 w-full lg:w-2/5">
      <div class="flex-1 min-h-0 min-w-0 relative">
        <Image
          src={volunteerPhoto}
          format="avif"
          quality="mid"
          alt="Picture of Marcial"
          class="z-10 max-h-52 lg:max-h-max w-full animate-fade-up animate-once animate-duration-[3000ms] animate-ease-in-out"
        />
      </div>

      <div
        class="lg:w-fit flex items-center gap-3 py-2 px-4 rounded-xl border border-darkGrey hover:border-grey"
      >
        <a
          class="no-underline text-white transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:text-yellow focus:text-yellow"
          target="_blank"
          href="https://www.linkedin.com/in/marcialfps/"
          aria-label="Linkedin profile"
          title="Linkedin"
        >
          <svg class="h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
        </a>
        <a
          class="no-underline text-white transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:text-yellow focus:text-yellow"
          target="_blank"
          href="mailto:marcialfco@live.com"
          aria-label="Email direction"
          title="Email"
        >
          <svg
            class="h-8"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
            ></path><path d="M3 7l9 6l9 -6"></path></svg
          >
        </a>
        <a
          class="no-underline text-white transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:text-yellow focus:text-yellow"
          target="_blank"
          href="https://twitter.com/marcialfps"
          aria-label="Twitter profile"
          title="Twitter/X"
        >
          <svg class="h-8" fill="none" viewBox="0 0 1200 1227"
            ><path
              fill="currentColor"
              d="M714.163 519.284 1160.89 0h-105.86L667.137 450.887 357.328 0H0l468.492 681.821L0 1226.37h105.866l409.625-476.152 327.181 476.152H1200L714.137 519.284h.026ZM569.165 687.828l-47.468-67.894-377.686-540.24h162.604l304.797 435.991 47.468 67.894 396.2 566.721H892.476L569.165 687.854v-.026Z"
            ></path></svg
          >
        </a>
      </div>
    </div>
    <Image
      src={textSeparator}
      format="avif"
      quality="low"
      alt="Separator"
      class="rotate-90 lg:rotate-0 h-1/2"
    />
    <div
      class="flex flex-col gap-2 font-serif animate-fade-down animate-delay-1000"
    >
      <div>
        <h1 class="text-white font-bold text-6xl lg:text-7xl">Marcial F</h1>

        <h2 class="text-white text-3xl lg:text-4xl font-light">Change agent</h2>
      </div>

      <p
        class="font-sans text-lg font-light leading-6 font-normal text-white m-0"
      >
        Volunteer in Canarian Youth Press since 2014 and participant in multiple
        organizations and projects related with youth and participation.
      </p>
    </div>
  </section>

  <Separator />

  <Image
    class="flex-auto block object-cover lg:h-1/5 rounded-xl"
    src={volunteerPhoto2}
    format="avif"
    quality="mid"
    alt="Picture about me"
  />

  <Heading level={2} title="Volunteering" />
  <section class="flex flex-col items-center">
    <Card>
      <Timeline
        items={[
          {
            title: "2022 - NOW",
            subtitle: "Representative and coordinator of Canarian Youth Press",
            description: "European Youth Press",
          },
          {
            title: "2015 - NOW",
            subtitle: "Technical secretary",
            description: "Canarian Youth Press NGO",
          },
          {
            title: "2020",
            subtitle: "Jury in Galardon Joven Canarias",
            description: "Gobierno de Canarias",
          },
          {
            title: "2017",
            subtitle: "Structured dialogue ambassador",
            description: "Spanish Youth Council",
          },
          {
            title: "2014",
            subtitle: "Coordinator",
            description: "Tiagua Joven Youth Group",
          },
        ]}
      />
    </Card>
  </section>

  <Heading level={2} title="Projects" />
  <section
    class="flex flex-col flex-wrap lg:flex-row justify-center items-center gap-6"
  >
    <Card
      mode="vertical"
      image={tiaguaMadreTierra}
      imageAlt="Tiagua Madre Tierra"
    >
      <Heading level={3} title="Tiagua Madre Tierra documentary" />

      <p class="m-0">
        Documentary that collects stories of the people of the village of
        Tiagua, Lanzarote. This village was a commercial and cultural reference
        in the history of the island.
      </p>
      <div class="flex justify-between">
        <div class="flex gap-2">
          <Tag content="Documentary" />
          <Tag content="History" />
          <Tag content="Local" />
        </div>
        <a
          class="no-underline text-white transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:text-yellow focus:text-yellow"
          target="_blank"
          href="https://www.youtube.com/watch?v=lUrMK5plLtc"
          aria-label="Play in Youtube"
          title="Play in Youtube"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-brand-youtube"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z"
            ></path><path d="M10 9l5 3l-5 3z"></path></svg
          >
        </a>
      </div>
    </Card>
    <Card mode="vertical" image={afterSchool} imageAlt="After School logo">
      <Heading level={3} title="After School" />

      <p class="m-0">
        The project is carried out under the need to provide a cultural, sports
        and educational offer to the young people of the island of Lanzarote
        after the end of the school period.
      </p>
      <div class="flex justify-between">
        <div class="flex gap-2">
          <Tag content="Youth" />
          <Tag content="Participation and engagement" />
        </div>
        <a
          class="no-underline text-white transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:text-yellow focus:text-yellow"
          target="_blank"
          href="https://lancelotdigital.com/ocio/llega-a-costa-teguise-la-semana-joven-after-school"
          aria-label="Read article"
          title="Read article"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-news"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M16 6h3a1 1 0 0 1 1 1v11a2 2 0 0 1 -4 0v-13a1 1 0 0 0 -1 -1h-10a1 1 0 0 0 -1 1v12a3 3 0 0 0 3 3h11"
            ></path><path d="M8 8l4 0"></path><path d="M8 12l4 0"></path><path
              d="M8 16l4 0"></path></svg
          >
        </a>
      </div>
    </Card>
  </section>
</MainLayout>

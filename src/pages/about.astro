---
import PageLayout from "../layouts/PageLayout.astro";
import Card from "../components/Card.astro";
import Separator from "../components/Separator.astro";
import Heading from "../components/Heading.astro";
import { Image } from "astro:assets";
import aboutPhoto from "../assets/aboutPhoto.jpg";
import figma from "../assets/figma.svg";
import javascript from "../assets/javascript.svg";
import typescript from "../assets/typescript.svg";
import html5 from "../assets/html5.svg";
import css3 from "../assets/css3.svg";
import react from "../assets/react.svg";
import nodejs from "../assets/nodejs.svg";
import astro from "../assets/astro.svg";

import nextjs from "../assets/nextjs.svg";
import testinglibrary from "../assets/testinglibrary.svg";
import jest from "../assets/jest.svg";
import express from "../assets/express.svg";
import tailwind from "../assets/tailwind.svg";
import aws from "../assets/aws.svg";
import Timeline from "../components/Timeline.astro";
---

<PageLayout title="About me">
  <section class="flex flex-col justify-center items-center flex-wrap gap-12">
    <div class="flex flex-col lg:flex-row gap-4">
      <Image
        class="block object-cover w-full lg:w-2/3 rounded-xl"
        src={aboutPhoto}
        alt="Picture about me"
      />

      <Card>
        <p>💻 Computer engineer.</p>

        <p>☁️ Certified AWS Associate Solution Architect.</p>
        <p>🖌️ Former member of the Halstack Design System.</p>
        <p>
          👨🏽‍💻 Developer, maintainer and analyst of internal web apps with React
          and NodeJS. Deployment through Jenkins pipelines and Terraform modules
          in AWS services.
        </p>
        <p>🫂 Volunteer in mutiple youth projects and organizations.</p>
        <p>📍 Lanzarote, Canary Islands, Spain.</p>
      </Card>
    </div>

    <Separator />

    <section class="flex flex-col items-center gap-4">
      <Heading level={2} title="Education and professional experience" />
      <div class="flex flex-col lg:flex-row justify-center items-center gap-4">
        <Card>
          <Timeline
            items={[
              {
                title: "2019",
                subtitle: "Degree in Software engineering",
                description: "University of Oviedo, Spain",
              },
              {
                title: "2021",
                subtitle: "Master in Web engineering",
                description: "University of Oviedo, Spain",
              },
              {
                title: "2023",
                subtitle: "AWS Associate Solutions Architect",
              },
            ]}
          />
        </Card>
        <Card>
          <Timeline
            items={[
              {
                title: "SEPT 2019 - MARCH 2020",
                subtitle: "Software engineer",
                description: "Capgemini, Langreo, Spain",
              },
              {
                title: "MARCH 2020 - NOW",
                subtitle: "Associate Professional Product Developer",
                description: "DXC Technology, Avilés, Spain",
              },
            ]}
          />
        </Card>
      </div>
    </section>

    <section class="flex flex-col items-center gap-4">
      <Heading level={2} title="Tech stack" />
      <div class="flex justify-center gap-4 flex-wrap">
        <div
          class="lg:w-fit flex flex-wrap items-center gap-3 py-2 px-4 rounded-xl border border-darkGrey hover:border-grey"
        >
          <Heading level={3} title="Design" />
          <Image src={figma} alt="Figma" />
        </div>
        <div
          class="lg:w-fit flex flex-wrap items-center gap-3 py-2 px-4 rounded-xl border border-darkGrey hover:border-grey"
        >
          <Heading level={3} title="Languages" />
          <Image src={javascript} alt="JavaScript" />
          <Image src={typescript} alt="TypeScript" />
          <Image src={html5} alt="HTML5" />
          <Image src={css3} alt="CSS" />
        </div>
        <div
          class="lg:w-fit flex flex-wrap items-center gap-3 py-2 px-4 rounded-xl border border-darkGrey hover:border-grey"
        >
          <Heading level={3} title="Libraries" />
          <Image src={react} alt="ReactJS" />
          <Image src={nodejs} alt="NodeJS" />
        </div>
        <div
          class="lg:w-fit flex flex-wrap items-center justify-center gap-3 py-2 px-4 rounded-xl border border-darkGrey hover:border-grey"
        >
          <Heading level={3} title="Frameworks" />
          <Image src={astro} alt="Astro" />
          <Image src={nextjs} alt="NextJS" />
          <Image src={testinglibrary} alt="Testing Library" />
          <Image src={jest} alt="Jest" />
          <Image src={express} alt="ExpressJS" />
          <Image src={tailwind} alt="TailwindCSS" />
        </div>
        <div
          class="lg:w-fit flex flex-wrap items-center gap-3 py-2 px-4 rounded-xl border border-darkGrey hover:border-grey"
        >
          <Heading level={3} title="Architecture" />
          <Image src={aws} alt="Amazon Web Services" />
        </div>
      </div>
    </section>

    <section class="flex flex-col items-center gap-4">
      <Heading level={2} title="Volunteering" />
      <Card>
        <Timeline
          items={[
            {
              title: "2014",
              subtitle: "Coordinator",
              description: "Tiagua Joven Youth Group",
            },
            {
              title: "2015 - NOW",
              subtitle: "Technical secretary",
              description: "Canarian Youth Press NGO",
            },
            {
              title: "2017",
              subtitle: "Structured dialogue ambassador",
              description: "Spanish Youth Council",
            },
            {
              title: "2020",
              subtitle: "Jury in Galardon Joven Canarias",
              description: "Gobierno de Canarias",
            },
            {
              title: "2022 - NOW",
              subtitle:
                "Representative and coordinator of Canarian Youth Press",
              description: "European Youth Press",
            },
          ]}
        />
      </Card>
    </section>

    <p class="font-sans text-base text-white lg:self-end">
      Want to know more? See <a
        class="underline hover:text-yellow focus:text-yellow"
        href="/website/projects"
      >
        my Projects</a
      >{" "}
       📝
    </p>
  </section>
</PageLayout>
